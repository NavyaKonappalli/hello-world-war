pipeline {
  agent none
    stages { 
      stage ('Build'){
        agent { label 'slaveone' }
          steps {
            sh 'echo ${BUILD_NUMBER}'
            sh 'mvn deploy'
            sh 'scp -R target/hello-world-war-${BUILD_NUMBER}.war root@172.31.2.183:/opt/tomcat/webapps'
          }        
      }
  }
 }
